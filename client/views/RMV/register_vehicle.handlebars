<h2 class="page-header">Register Vehicle</h2>
<form method="post" action="/register_vehicle">

  <div class="form-group">
    <label>Owner Name</label>
    <input type="text" class="form-control" name="owner_name" placeholder="Full Name of the owner" required="">
  </div>

  <div class="form-group">
    <label>NIC</label>
    <input type="text" class="form-control" name="nic" placeholder="NIC" required="" maxlength="12">
  </div>

  <div class="form-group">
    <label>Address of Owner</label>
    <input type="text" class="form-control" name="owner_address" placeholder="Address of Owner" required="" maxlength="9">
  </div>

  <div class="form-group">
    <label>License No</label>
    <input type="text" class="form-control" name="license" placeholder="License" required="">
  </div>

  <div class="form-group">
    <label>Province</label>
    <input type="text" class="form-control" name="province" placeholder="Province" required="">
  </div>

  <div class="form-group">
    <label>District</label>
    <input type="text" class="form-control" name="district" placeholder="District" required="">
  </div>

    <div class="form-group">
    <label>Registration Status</label>
    <input type="text" class="form-control" name="registration_status" placeholder="Registration Status" required="">
    <datalist id="registration_status">
      <option value="Locally built">
      <option value="Recondition">
      <option value="Brand New">
      <option value="Bought from Auction">
      <option value="Other">
    </datalist>
  </div>

    <div class="form-group">
    <label>Vehicle Type</label>
    <input type="text" class="form-control" name="vehicle type" placeholder="Vehicle Type" required="">
    <datalist id="registration_status">
      <option value="Motor car">
      <option value="Three Wheeler Car">
      <option value="Jeep">
      <option value="Motor Lorry">
      <option value="Delivery Van">
      <option value="Three Wheeler Van">
      <option value="Crane">
      <option value="Dump Truck">
      <option value="Prime Mover">
      <option value="Motor Cycle">
      <option value="Hearse">
      <option value="Ambulance">
      <option value="Dual Purpose Vehicle ">
      <option value="Hand Tractor">
      <option value="Tractor 4 wheel">
      <option value="Lorry Trailer">
      <option value="Land Vehicle">
      <option value="Motor Coach">
      <option value="Container Truck ">
      <option value="Other">
    </datalist>
  </div>

  <div class="form-group">
    <label>Vehicle No</label>
    <input type="text" class="form-control" name="vehicle_no" placeholder="Vehicle Number" required="" maxlength="9">
  </div>

  <div class="form-group">
    <label>Model</label>
    <input type="text" class="form-control" name="Model" placeholder="Model" required="" maxlength="21">
  </div>

  <div class="form-group">
    <label>Year of Manufacuture</label>
    <input type="text" class="form-control" name="yom" placeholder="Year of Manufacture" required="" maxlength="4">
  </div>

  <div class="form-group">
    <label>Country of Manufacture</label>
    <input type="text" class="form-control" name="manufacture_country" placeholder="Country of Manufacture" required="">

  </div>

  <div class="form-group">
    <label>Chasis No</label>
    <input type="text" class="form-control" name="chasis_no" placeholder="Chasis Number" required="" maxlength="13">
  </div>

  <div class="form-group">
    <label>Engine No</label>
    <input type="text" class="form-control" name="engine_no" placeholder="Engine Number" required="" maxlength="7">
  </div>

    <div class="form-group">
    <label>Vehicle Color</label>
    <input type="text" class="form-control" name="color" placeholder="Vehicle Color" required="">
  </div>

  <button type="submit" class="btn btn-primary btn-lg col-md-8 col-md-offset-2" style="padding-top:20px;
    padding-bottom:20px;">Register Vehicle</button>
</form>